@{
    ViewBag.Title = "Details";
}
@model List<OmniaWeb.Models.TaskTemplateModel>
<div id="page_content">
    
        <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }" class="uk-sticky-init uk-active" style="position: fixed; top: 40px; width: 100%;">
            <div class="heading_actions">

            </div>
            <h1>Task Catalog</h1>
            <span class="uk-text-upper uk-text-small"><a href="#">Project</a></span>
          </div>
    <br />
    <br />
    <br />
        <div id="page_content_inner">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-overflow-container uk-margin-bottom">
                        <table class="uk-table uk-table-align-vertical uk-table-nowrap tablesorter tablesorter-altair" id="ts_issues">
                            <thead>
                                <tr>
                                    
                                    <th>Title</th>
                                    <th>Estimated Duration</th>
                                    <th>Start</th>
                                    <th>End</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>

                                    <th>Title</th>
                                    <th>Estimated Duration</th>
                                    <th>Start</th>
                                    <th>End</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var m in Model) { 
                                <tr>
                                    
                                    <td>
                                        @m.Name
                                    </td>
                                    <td>
                                       @m.dureeEstime
                                    </td>
                                    <td><span class="uk-badge uk-badge-danger">Not Set</span></td>
                                    <td><span class="uk-badge uk-badge-danger">Not Set</span></td>
                                    @if (User.IsInRole("admin") || User.IsInRole("DG"))
                                    {
                                        <td><a href="@(Url.Action("Edit", "TaskTemplate", new { id = m.Id, }))"><i class="uk-icon-cog"></i> </a></td>

                                        <td><a href="@(Url.Action("Delete", "TaskTemplate", new { id = m.Id, }))"><i class="uk-icon-remove"></i> </a></td>
                                    }
                                    
                                </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                  
                </div>
            </div>
        </div>
    @{
        if (User.IsInRole("admin") || User.IsInRole("DG"))
        {
            <div class="md-fab-wrapper">
                <a class="md-fab md-fab-accent" href="@(Url.Action("Create", "TaskTemplate", new { id=ViewBag.id}))">
                    <i class="material-icons">&#xE145;</i>
                </a>
            </div>
        }


    }


</div>
