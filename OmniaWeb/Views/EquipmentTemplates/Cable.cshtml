
@{
    ViewBag.Title = "Cable";
}

@model List<OmniaWeb.Models.EquipementTemplateModels>


<div class="uk-width-1-1">
    <div id="page_content">
        <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }" class="uk-sticky-init uk-active" style="position: fixed; top: 40px; width: 100%;">
            <div class="heading_actions">

            </div>
            <h1>Cable Templates</h1>
            <span class="uk-text-upper uk-text-small"><a href="#">Project</a></span>
        </div>
        <br />
        <br />
        <br />
        <div id="page_content_inner">

            
            <div class="md-card uk-margin-medium-bottom">
                <div class="md-card-content">
                    <table id="dt_default" class="uk-table" cellspacing="0" width="100%">
                        <thead>
                            <tr>

                                <th colspan="5">Templates List</th>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <th>Nb Service</th>
                                <th>Edit</th>
                                <th>Delete</th>


                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Nb Service</th>
                                <th>Edit</th>
                                <th>Delete</th>


                            </tr>
                        </tfoot>

                        <tbody>
                            @foreach (var tmp in Model)
                            {

                                <tr>
                                    <td><a href="@(Url.Action("Details", "EquipmentTemplates", new { id = tmp.Id}))">@tmp.Name</a></td>
                                    <td>@tmp.nb_services</td>
                                    @if (User.IsInRole("admin") || User.IsInRole("DG")) { 
                                    <td><a href="@(Url.Action("Edit", "EquipmentTemplates", new { id = tmp.Id }))"><i class="uk-icon-cog"></i> </a></td>
                                    <td><a href="@(Url.Action("Delete", "EquipmentTemplates", new { id = tmp.Id }))"><i class="uk-icon-remove"></i> </a></td>
                                    }
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <ul class="uk-pagination uk-margin-medium-top uk-margin-medium-bottom">
                <li class="uk-disabled"><span><i class="uk-icon-angle-double-left"></i></span></li>
                <li class="uk-active"><span>1</span></li>

                <li><a href="#"><i class="uk-icon-angle-double-right"></i></a></li>
            </ul>
        </div>
    </div>
</div>
<div class="md-fab-wrapper">
    <a class="md-fab md-fab-accent" href="@(Url.Action("Create", "EquipmentTemplates"))">
        <i class="material-icons">&#xE145;</i>
    </a>
</div>


