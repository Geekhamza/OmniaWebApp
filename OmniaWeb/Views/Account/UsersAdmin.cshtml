@{
    ViewBag.Title = "UsersAdmin";
}
@model List<OmniaWeb.Models.UserDetailModel>

<div id="page_content">
    <div id="page_content_inner">
        <!-- il contenue mt3 il page -->

        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="uk-overflow-container">
                    <table class="uk-table uk-table-nowrap table_check">
                        <thead>
                            <tr>
                                
                                <th class="uk-width-1-10 uk-text-center">User</th>
                                <th class="uk-width-2-10">Email</th>
                                <th class="uk-width-2-10 uk-text-center">Role</th>
                                <th class="uk-width-1-10 uk-text-center">Edit</th>
                                <th class="uk-width-1-10 uk-text-center">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var u  in Model){
                            <tr>
                                <td class="uk-text-center"><img class="md-user-image" src="/assets/img/avatars/avatar_01_tn.png" alt="" /></td>
                                <td>@u.Email</td>
                                <td class="uk-text-center">@u.Role</td>
                                <td>   
                                    <a href="@(Url.Action("EditUser", "Account",new {userId=u.Id}))"><i class=" md-icon material-icons">&#xE254;</i></a>
                                </td>
                                <td>
                                    <a href="@(Url.Action("Delete", "Account",new {id=u.Id}))"><i class="md-icon material-icons">&#xE257;</i></a>
                                </td>
                            </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <ul class="uk-pagination uk-margin-medium-top">
                    <li class="uk-disabled"><span><i class="uk-icon-angle-double-left"></i></span></li>
                    <li class="uk-active"><span>1</span></li>
                    <li><a href="#"><i class="uk-icon-angle-double-right"></i></a></li>
                </ul>
            </div>

            <div class="md-fab-wrapper">
                <a class="md-fab md-fab-accent" href="@(Url.Action("Register", "Account"))">
                     <i class="material-icons">&#xE145;</i>
                </a>
            </div>
        </div>





        </div>
    </div>


